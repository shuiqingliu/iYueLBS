<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:id="@+id/drawer_user_cover"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_cover"/>

    <com.iyuelbs.support.widget.RoundedImageView
            android:id="@+id/drawer_user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="118dp"
            />

    <LinearLayout
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/default_shape"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/drawer_user_avatar"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
        <TextView
            android:id="@+id/drawer_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>