<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.iyuelbs.support.widget.RoundedImageView
                android:id="@+id/home_header_user_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:riv_border_width="0dp"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/home_header_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/home_header_user_avatar"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/home_header_user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_header_user_avatar"
                android:layout_alignLeft="@id/home_header_user_name" />

            <TextView
                android:id="@+id/home_header_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/home_header_user_name"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/home_header_user_name" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/home_date_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:floatingLabel="normal"
                app:floatingLabelText="@string/title_date_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="?selectableItemBackground"
                android:padding="8dp"
                android:text="@string/btn_send_date"
                android:textColor="?colorAccent"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>