<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.iyuelbs.ui.login.LoginFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_bg"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_position"
            android:layout_margin="24dp"/>

    <Button
            android:id="@+id/login_weibo_auth_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/weibo_shape"
            android:drawableLeft="@drawable/ic_weibo"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="280dp"
            android:textColor="@color/white"
            android:text="@string/weibo"/>


    <Button
            android:id="@+id/login_qq_auth_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/qq"
            android:textColor="@color/white"
            android:background="@drawable/qq_shape"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="348dp"

            android:drawableLeft="@drawable/ic_qq"/>

    <Button
            android:id="@+id/login_default_auth_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/default_login"
            android:textColor="@color/white"
            android:background="@drawable/default_shape"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="416dp"
            android:drawableLeft="@drawable/ic_person_login"/>


</FrameLayout>

