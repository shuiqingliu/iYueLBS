<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="com.iyuelbs.ui.login.LoginChooserFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_login_chooser"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:paddingTop="20dp"
        android:src="@drawable/ic_position"/>

    <Button
        android:id="@+id/login_weibo_auth_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/weibo_shape"
        android:drawableLeft="@drawable/ic_weibo"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/weibo"
        android:textColor="@color/white"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/login_qq_auth_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="348dp"
        android:background="@drawable/qq_shape"
        android:drawableLeft="@drawable/ic_qq"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/qq"
        android:textColor="@color/white"

        android:textSize="20sp"/>

    <Button
        android:id="@+id/login_default_auth_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/default_shape"
        android:drawableLeft="@drawable/ic_person_login"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/default_login"
        android:textColor="@color/white"
        android:textSize="20sp"/>


</FrameLayout>
