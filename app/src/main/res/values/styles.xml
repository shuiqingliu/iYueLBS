<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Default" parent="AppTheme">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
    </style>

    <style name="Login" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/login_background</item>
        <item name="colorPrimaryDark">@color/login_background</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
    </style>

</resources>
