<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.iyuelbs"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 基础权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 百度地图 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />


    <application
        android:name=".app.AppApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Default">

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="Xsh5kqnAHNcyU2nROcy6dPfk"/>

        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui.CommonActivity"/>

        <activity
            android:name=".ui.login.RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>

        <activity android:name=".ui.settings.SettingsActivity"/>

        <activity android:name=".ui.main.MyInfoDetail"
                  android:label="@string/title_activity_my_detail">
        </activity>

        <receiver
            android:name=".support.receiver.MessageReceiver"
            android:exported="false">
            <!--<intent-filter>-->
            <!--&lt;!&ndash;<action android:name="cn.bmob.push.action.MESSAGE"/>&ndash;&gt;-->
            <!--</intent-filter>-->
        </receiver>

        <!-- Image Crop -->
        <activity android:name="com.soundcloud.android.crop.CropImageActivity"/>

        <service android:name="com.baidu.location.f" android:enabled="true" android:process=":remote">
        </service>

    </application>

</manifest>
